<%- include ('./partials/header.ejs') %>
<title>Add Movies</title>
<style>
  body {
    background: linear-gradient(
      90deg,
      rgba(2, 0, 36, 1) 0%,
      rgba(2, 0, 36, 1) 0%,
      rgba(2, 0, 36, 1) 0%,
      rgba(134, 134, 243, 1) 0%,
      rgba(0, 212, 255, 1) 100%
    );
    color: white;
    max-width: 100%;
    overflow-x: hidden;
  }
  input {
    max-width: 100%;
    padding: 2rem;
  }
  .formClass {
    display: flex;
    flex-wrap: wrap;
    flex-shrink: inherit;
    flex-basis: 2rem;
    justify-content: space-around;
    grid-template-columns: min-content;
  }
</style>
<body>
  <%if(message){%> <%for(var i=0; i< message.length; i++){%>
  <%console.log(message)%> <%if(message[0].startsWith('Invalid')){%>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong><%=message%></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%}else if(message[0].includes('Already')){%>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><%=message%></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%} else{ %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong><%=message%></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%}%> <%}%> <%}%>
  <div style="text-align: center">
    <h1 style="text-size-adjust: 30px">Add Movies</h1>
    <h6>Please add the details to add a Movie to the collection</h6>
    <h7>(**Make sure to add the right title for the movie**)</h7><br />
    <br />
  </div>

  <div class="formClass">
    <form
      style="text-align: center"
      action="/crm/crm/createmovies"
      method="POST"
    >
      <input
        type="text"
        class="form-control"
        name="genreName"
        placeholder="Enter Genre"
        required
      /><br />
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Title"
        required
      /><br />
      <input
        type="text"
        class="form-control"
        name="numberInStock"
        value="12"
        placeholder="Number in Stock"
      /><br />
      <input
        type="text"
        class="form-control"
        name="dailyRentalRate"
        placeholder="Rent Rate"
        required
      /><br />
      <button type="submit" class="btn btn-success" style="border-radius: 10px">
        Submit
      </button>
    </form>
  </div>
