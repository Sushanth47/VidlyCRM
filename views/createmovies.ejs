<%- include ('./partials/header.ejs') %>
<title>Add Movies</title>
<style>
  body {
    background-color: white;
    max-width: 100%;
    overflow-x: hidden;
  }
  input {
    max-width: 100%;
    padding: 2rem;
  }
  .formClass {
    display: flex;
    flex-wrap: wrap;
    flex-shrink: inherit;
    flex-basis: 2rem;
    justify-content: space-around;
    grid-template-columns: min-content;
  }
</style>
<body>
  <div style="text-align: center">
    <h1 style="text-size-adjust: 30px">Add Movies</h1>
    <h6>Please add the details to add a Movie to the collection</h6>
    <h7>(**Make sure to add the right title for the movie**)</h7><br />
    <br />
  </div>

  <div class="formClass">
    <form
      style="text-align: center"
      action="/crm/crm/createmovies"
      method="POST"
    >
      <input
        type="text"
        class="form-control"
        name="genreName"
        placeholder="Enter Genre"
      /><br />
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Title"
      /><br />
      <input
        type="text"
        class="form-control"
        name="numberInStock"
        value="12"
        placeholder="Number in Stock"
      /><br />
      <input
        type="text"
        class="form-control"
        name="dailyRentalRate"
        placeholder="Rent Rate"
      /><br />
      <button
        type="submit"
        class="btn btn-outline-success"
        style="border-radius: 10px"
      >
        Submit
      </button>
    </form>
  </div>
